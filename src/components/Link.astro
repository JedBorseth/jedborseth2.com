---
import { cn } from "../lib/utils";

type PropTypes = {
  className?: string;
  title?: string;
  href?: string;
  icon?: string;
  openNew?: boolean;
  lazy?: boolean;
  projectName?: string;
  subtitle?: string;
};
const {
  className,
  title,
  href,
  icon,
  openNew,
  lazy,
  projectName,
  subtitle,
}: PropTypes = Astro.props;
---

<a
  class="rounded-base border-2 border-black bg-main sm:p-5 p-2 shadow-base transition-all hover:translate-x-boxShadowX hover:translate-y-boxShadowY hover:shadow-none max-h-44"
  target={openNew ? "_blank" : "_self"}
  href={href}
  transition:name={projectName}
>
  <img
    class="h-8 w-8 sm:h-10 sm:w-10"
    src={icon}
    alt={`Icon`}
    loading={lazy ? "lazy" : "eager"}
  /><p class="mt-3 text-lg font-heading sm:text-xl">
    {title}
  </p><p class="mt-1 text-[0.5rem] font-base sm:text-base md:text-sm">
    {subtitle ?? "@jedborseth"}
  </p></a
>
