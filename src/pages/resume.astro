---
import Avatar from "../components/Avatar.astro";
import Layout from "../layouts/layout.astro";
import CV from "../../public/images/icons/readdotcv.svg";
import PDF from "../../public/resume.pdf";
---

<Layout
  title={"Jed Borseth | Resume"}
  canonicalURL={`https://jedborseth.com/resume`}
>
  <div class="flex flex-col gap-10 items-center">
    <div class="scale-50">
      <Avatar img="https://avatars.githubusercontent.com/u/95988576?v=4" />
    </div>
    <img
      class="h-20 w-20"
      src={CV.src}
      alt={`Icon`}
      transition:name="resume-icon"
    />
    <p>socials are gonna animate here</p>
    <p>this is the wrong resume -></p>
  </div>
  <embed src={PDF} class="w-max h-screen flex-1" />
</Layout>
